generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}


model User {
  id        String   @id  @map("_id") 
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}
